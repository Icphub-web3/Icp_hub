{
  "version": 1,
  "canisters": {
    "icp_hub_backend": {
      "type": "motoko",
      "main": "src/backend/main.mo"
    },
    "backend_test": {
      "type": "motoko",
      "main": "test/backend_test/main.mo"
    },
    "frontend": {
      "type": "assets",
      "source": ["src/frontend/dist"],
      "build": [
        "npm --prefix src/frontend install",
        "npm --prefix src/frontend run build"
      ]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    }
  }
}
